  "shortcuts": [
    {
      "name": "Nouvelle Analyse",
      "short_name": "Analyser",
      "description": "Commencer une nouvelle analyse financière",
      "url": "/",
      "icons": [
        {
          "src": "/shortcut-analyze.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Tableau de bord", 
      "description": "Voir mon tableau de bord financier",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/shortcut-dashboard.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Simulations",
      "short_name": "Simuler",
      "description": "Lancer des simulations \"Et si ?\"",
      "url": "/simulator", 
      "icons": [
        {
          "src": "/shortcut-simulate.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Paramètres",
      "short_name": "Config",
      "description": "Configurer l'application et l'IA",
      "url": "/settings",
      "icons": [
        {
          "src": "/shortcut-settings.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+rivela",
      "url": "/import?data=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url",
      "files": [
        {
          "name": "financial_data",
          "accept": ["application/json", "text/csv", ".json", ".csv"]
        }
      ]
    }
  },
  "capture_links": "new-client",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "permissions": [
    "storage",
    "notifications",
    "background-sync"
  ]
}